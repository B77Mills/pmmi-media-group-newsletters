$ const { i18n } = out.global;
$ const { content } = input;

$ const contentTypeActions = {
  'default': 'Read More',
  'podcast': 'Listen',
  'video': 'Watch',
  'document': 'Download',
  'whitepaper': 'Download',
  'promotion': content.linkText || 'Learn More',
}

$ const contentAction = contentTypeActions[content.type] || contentTypeActions.default;

<a href=content.siteContext.url style="color: inherit; text-decoration: underline;" target="_blank">
  ${i18n(contentAction)} &rarr;
</a>
