import { get } from "@parameter1/base-cms-object-path";

$ const { newsletter, date } = data;
$ const { config } = out.global;

$ const newsletterConfig = config.get(newsletter.alias);
$ const logoConfig = get(newsletterConfig, "logoConfig");

<common-standard-layout
  data=data
  style-component="standard"
  style-component-input={ "accent-color": "#8eae3d" }
  sections=["Feature", "Standard", "What's Trending"]
>
  <@header>
    <common-standard-header-block
      newsletter=newsletter
      date=date
      image-attrs={ width: 186 }
      image-style={ "max-width": "186px" }
      image-options={ w: 186 }
      ...logoConfig
      image-src="/files/base/pmmi/all/image/newsletters/pfw-joyces-voice-header.png"
      secondary-background-color="#8eae3d"
    />
  </@header>
</common-standard-layout>
